<?xml version="1.0" encoding="UTF-8"?>
<project name="install" default="install" basedir="." description="Clone repo and run composer">
    <target name="install">
        <property file="phing/config/app.properties" />
        <mkdir dir="${application.startdir}/vhosts/${component}" />
        <gitclone repository="${${component}.repo}" targetPath="${application.startdir}/vhosts/${${component}.dir}" />
        <exec passthru="true" checkreturn="true" command="composer -v --no-dev install" dir="${application.startdir}/vhosts/${${component}.dir}" />
        <exec command="chmod -R 777 app/storage" dir="${application.startdir}/vhosts/${${component}.dir}" />
    </target>
</project>
